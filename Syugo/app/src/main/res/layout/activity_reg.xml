<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    android:background="@color/colorBackground">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ユーザ名を入力してください．"
        android:id="@+id/textView"
        android:textColor="@color/colorWhite"
        android:textSize="20dp"
        android:layout_gravity="center_horizontal"
        android:accessibilityLiveRegion="none"
        android:layout_weight="1"
        android:gravity="center_vertical|center_horizontal" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/text_id"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:textSize="20dp"
        android:maxLength="20"
        android:inputType="text"
        android:background="@color/colorLightBackground"
        android:colorControlNormal="@color/colorLightBackground"
        android:colorControlActivated="@color/colorBackground"
        android:textCursorDrawable="@color/colorBackground"
        />

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1" />

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ID発行"
            android:id="@+id/button_issue"
            android:textColor="@color/colorWhite"
            android:textSize="20dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal"
            android:background="@drawable/custom_button_green"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            />


    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="あなたのIDは"
        android:id="@+id/textView4"
        android:textColor="@color/colorWhite"
        android:textSize="20dp"
        android:layout_gravity="left|center"
        android:layout_weight="1"
        android:gravity="center"
        android:paddingLeft="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/textView3"
        android:textColor="@color/colorGreen"
        android:textSize="30dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:gravity="fill_horizontal|center_vertical" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="です．"
        android:id="@+id/textView5"
        android:textColor="@color/colorWhite"
        android:textSize="20dp"
        android:layout_gravity="center_vertical|right"
        android:layout_weight="1"
        android:gravity="center"
        android:paddingRight="20dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ID共有"
            android:id="@+id/button_share"
            android:textColor="@color/colorWhite"
            android:textSize="20dp"
            android:layout_weight="1"
            android:background="@drawable/custom_button_green"/>

        <Space
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="検索モード"
            android:id="@+id/button_findmode"
            android:textColor="@color/colorWhite"
            android:textSize="20dp"
            android:layout_weight="1"
            android:background="@drawable/custom_button_green"/>
    </LinearLayout>

</LinearLayout>