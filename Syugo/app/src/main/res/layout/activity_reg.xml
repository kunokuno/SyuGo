<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/menu_bg2"
        android:scaleType="fitXY"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingTop="16dp"
        android:paddingRight="16dp"
        android:paddingBottom="25dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#96ffffff"
            android:text="Your Name"
            android:textSize="40dp"
            android:gravity="bottom"
            android:paddingTop="15dp"
            android:paddingBottom="5dp"
            android:layout_weight="0.1"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/text_id"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:textSize="30dp"
            android:maxLength="20"
            android:inputType="text"
            android:hint="type your name"
            android:background="#96ffffff"
            android:colorControlNormal="@color/colorLightBackground"
            android:colorControlActivated="@color/colorBackground"
            android:textCursorDrawable="@color/colorBackground"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="REGISTOR"
            android:id="@+id/button_issue"
            android:textColor="@color/colorWhite"
            android:textSize="20dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.8"
            android:gravity="center_vertical|center_horizontal"
            android:background="#00BFFF"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"/>


        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/id_show"
            android:text=""
            android:textColor="@color/colorGreen"
            android:textSize="60dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:gravity="fill_horizontal|center_vertical" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ID共有"
                android:id="@+id/button_share"
                android:textColor="@color/colorWhite"
                android:textSize="20dp"
                android:layout_weight="1"
                android:background="@drawable/custom_button_green_state"/>

            <Space
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="検索モード"
                android:id="@+id/button_findmode"
                android:textColor="@color/colorWhite"
                android:textSize="20dp"
                android:layout_weight="1"
                android:background="@drawable/custom_button_green_state"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>